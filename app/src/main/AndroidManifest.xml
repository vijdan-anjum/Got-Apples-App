<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comp3350.got_apples">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GotApples">
        <activity android:name=".presentation.RegisterActivity"></activity>
        <activity android:name=".presentation.RecipeDescriptionActivity" />
        <activity android:name=".presentation.RecipeActivity" />
        <activity android:name=".presentation.CuisineActivity" />
        <activity android:name=".presentation.IngredientsActivity" />
        <activity android:name=".presentation.LoginActivity" />
        <activity android:name=".presentation.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>